<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/v2_user_favorite_cardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/v2_user_favorite_listitem_icon"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/v2_user_favorite_listitem_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/primary_text_light"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/v2_user_favorite_listitem_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#797979"
                android:layout_alignParentBottom="true"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/v2_user_favorite_listitem_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#797979"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textSize="12sp"/>
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>