<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/download_list_item_img"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        android:layout_marginStart="5dp"
        android:layout_marginTop="9dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:orientation="vertical" >

		<RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/download_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/download_list_item_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/Text_uploadingListinitper"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
               android:id="@+id/download_list_item_rate"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/download_list_item_percent"
               android:layout_alignParentEnd="true"
               android:layout_marginTop="10dp"
               android:textColor="@android:color/tertiary_text_light"
               android:textSize="10sp" />

            <TextView
                android:id="@+id/download_list_item_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/download_list_item_name"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/tertiary_text_light"
                android:textSize="10sp" />
        </RelativeLayout>

		<ProgressBar
            android:id="@+id/download_list_item_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>

</LinearLayout>
