<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_extra"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="5.5"
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        android:padding="5dip" >

        <ImageButton
            android:id="@+id/extra_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_back" />

        <TextView
            android:id="@+id/extra_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dip"
            android:ellipsize="middle"
            android:maxLength="30"
            android:singleLine="true"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="2.5"
        android:orientation="horizontal" >

        <RadioGroup
            android:id="@+id/extra_radio_group"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/extra_2d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_extra_2d"
                android:button="@null"
                android:scaleType="fitCenter" />

            <RadioButton
                android:id="@+id/extra_2d_3d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_extra_2dto3d"
                android:button="@null"
                android:scaleType="fitCenter" />

            <RadioButton
                android:id="@+id/extra_3d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_extra_3d"
                android:button="@null"
                android:scaleType="fitCenter" />

            <RadioButton
                android:id="@+id/extra_3d_2d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_extra_3dto2d"
                android:button="@null"
                android:scaleType="fitCenter" />
        </RadioGroup>

        <ImageButton
            android:id="@+id/extra_vr"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="1dp"
            android:background="#00000000"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_vr" />
    </LinearLayout>

</LinearLayout>